<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href='/css/forms.css'>
</head>
<body>
  <%- include('../includes/nav.ejs') %>
  <main>
    <%-include('../includes/msgs.ejs') %>
    <form class="product-form" action='/password-reset' method="POST">
      <!-- Include csrf token:-->
      <input type="hidden" name="_csrf" value="<%= csrf_token %>">
      <input type="hidden" name="user_id" value="<%= user_id %>">
      <input type="hidden" name="pwd_token" value="<%= pwd_token %>">

      <label for="pword">Password</label>
      <input type="password" id="pword" name="pword">

      <label for="c_pword">Confirm Password</label>
      <input type="password" id="c_pword" name="c_pword">
      
      <button type="submit">Reset Password</button>
    </form>
  </main>

<%- include('../includes/end.ejs') %>